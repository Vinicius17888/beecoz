{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["app/components/*"],
      "@lib/*": ["app/lib/*"],
      "@theme": ["app/theme/index"],
      "@theme/*": ["app/theme/*"],
      "@assets/*": ["assets/*"]          // <<-- ajuda no autocomplete
    }
  },
  "extends": "expo/tsconfig.base",
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
